* text=auto eol=lf

# Windows scripts that should stay CRLF
*.ps1  text eol=crlf
*.psm1 text eol=crlf
*.bat  text eol=crlf
*.cmd  text eol=crlf

# Unix-y scripts
*.sh   text eol=lf

# App sources (prefer LF for cross-platform & CI)
*.ts   text eol=lf
*.tsx  text eol=lf
*.js   text eol=lf
*.jsx  text eol=lf
*.json text eol=lf
*.yml  text eol=lf
*.yaml text eol=lf
*.py   text eol=lf
*.toml text eol=lf
*.md   text eol=lf
*.lock text eol=lf
