# Default: auto text normalization
* text=auto

# Windows scripts CRLF
*.ps1   text eol=crlf
*.psm1  text eol=crlf
*.cmd   text eol=crlf
*.bat   text eol=crlf

# Cross-platform LF
*.yml   text eol=lf
*.yaml  text eol=lf
*.md    text eol=lf
*.json  text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.js    text eol=lf
*.py    text eol=lf
*.sh    text eol=lf
*.dockerfile text eol=lf
